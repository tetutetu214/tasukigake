<div class="container-fluid">
  <%= render "shared/header" %>

<!-- インフォメーション記述情報-->
  <div class="companies-title mt-3">
    <div calss="row-top">
      <h1>社名・住所を入力する</h1>
      <p>本項目を埋めると「協力会社を探す」の一覧にあなたの情ï報が掲載されます。<br>発注会社から仕事を受けやすくするためにも、情報編集を行ってください。</p>
    </div>
<!-- info tab-->

<%= render "shared/navbar" %>

<!-- info form area-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
    </nav>
<!-- インフォメーション navbar 記述情報-->
        <div class="row-border">
          <form>
            <div class="form-group mt-3 ">
              <label for="formControlRange">
                <h3>プロフィール完了度</h3>
              </label>
              <input type="range" class="form-control-range" id="formControlRange">
            </div>
          </form>
        </div>
<!-- インフォメーション 記述情報--> 
     <div class="row-main">
        <%= form_for @company do |f| %>
        <%= render 'shared/error_messages', model:  f.object %>

        <div class="form-group mt-5">
          <%= f.label :company_name, "会社名" %><a>必須</a><br />
          <%= f.text_field :company_name,class: "form-control", placeholder: "例)STIK株式会社" %>
        </div>

        <div class="form-group mt-2">
          <%= f.label :postal_code, "郵便番号" %><a>必須</a><br />
          <%= f.text_field :postal_code,class: "form-control", placeholder: "(例)0123456",maxlength: "7" %>
         <small class="text-muted">ハイフン無し半角英数字7桁</small>
        </div>
<!-- インフォメーション 都道府県-->
        <div class="form-group mt-2">
          <%= f.label :prefecture_id, "都道府県" %>
          <a>必須</a><br />
          <%= f.collection_select(:prefecture_id,Prefecture.all, :id, :name, {}, {class:"select-box form-control", id:"prefecture"}) %>
        </div>

        <div class="form-group">
          <%= f.label :company_city, "市町村",class: "form-text" %>
          <%= f.text_field :company_city, class:"form-control", placeholder:"例）さいたま市さいたま" %>
        </div>

        <div class="form-group">
          <%= f.label :company_address, "市町村",class: "form-text" %>
          <%= f.text_field :company_address, class:"form-control", placeholder:"例）STIKビル1階"%>
        </div>

        <div class="text-center mb-5">
          <%= f.submit "記録する" ,class:"btn btn-block send-button tx-tfm" %>
        </div>
      <% end %>
    </div>  
  </div>
<!-- フッター -->
    <%= render "shared/footer" %>
</div>