<div class="container-fluid">
  <%= render "shared/header" %>

<!-- インフォメーション記述情報-->
  <div class="companies-title mt-3">
    <div calss="row-top">
      <h1>プロフィールを作成する</h1>
      <p>本項目を埋めると「協力会社を探す」の一覧にあなたの情報が掲載されます。<br>発注会社から仕事を受けやすくするためにも、情報編集を行ってください。</p>
    </div>
<!-- info tab-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">プロフィール</a>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="ナビゲーションの切替">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to "社名・住所", companies_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "基本情報", companies_details_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">業種</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">対応可能エリア</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">会社PR</a>
          </li>
        </ul>
      </div>
    </nav>

<!-- info form area-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
    </nav>
<!-- インフォメーション navbar 記述情報-->
        <div class="row-border">
          <form>
            <div class="form-group mt-3 ">
              <label for="formControlRange">
                <h3>プロフィール完了度</h3>
              </label>
              <input type="range" class="form-control-range" id="formControlRange">
            </div>
          </form>
        </div>
<!-- インフォメーション 記述情報--> 
     <div class="row-main">
        <%= form_with(model: @company,local: true) do |f| %>
        <%= render 'shared/error_messages', model:  f.object %>

        <div class="form-group mt-5">
          <%= f.label :company_name, "会社名" %><a>必須</a><br />
          <%= f.text_field :company_name,class: "form-control", placeholder: "例)STIK株式会社" %>
        </div>

        <div class="form-group mt-2">
          <%= f.label :postal_code, "郵便番号" %><a>必須</a><br />
          <%= f.text_field :postal_code,class: "form-control", placeholder: "(例)0123456",maxlength: "7" %>
         <small class="text-muted">ハイフン無し半角英数字7桁</small>
        </div>
<!-- インフォメーション 都道府県-->
        <div class="form-group mt-2">
          <%= f.label :prefecture_id, "都道府県" %>
          <a>必須</a><br />
          <%= f.collection_select(:prefecture_id,Prefecture.all, :id, :name, {}, {class:"select-box form-control", id:"prefecture"}) %>
        </div>

        <div class="form-group">
            <label class="form-text">市区町村</label>
          <%= f.text_field :city, class:"form-control", placeholder:"例）さいたま市さいたま" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">番地</label>
          </div>
          <%= f.text_field :address, class:"form-control", placeholder:"例）STIKビル1階"%>
        </div>

        <div class="text-center mb-5">
          <%= f.submit "記録する" ,class:"btn btn-block send-button tx-tfm" %>
        </div>
      <% end %>
    </div>  
  </div>
<!-- フッター -->
    <%= render "shared/footer" %>
</div>